@page "/incidents"
@using Client.AuthHandlers
@using Common.Enums
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits AuthGuard

<h3>Incidents</h3>

<div class="row">
    <div class="col-12 col-lg-5">
        <h5>Create Incident</h5>

        <EditForm Model="_create" OnValidSubmit="CreateIncident">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-2">
                <label>Title</label>
                <InputText class="form-control" @bind-Value="_create.Title" />
            </div>

            <div class="mb-2">
                <label>Description</label>
                <InputTextArea class="form-control" @bind-Value="_create.Description" />
            </div>

            <div class="mb-2">
                <label>Severity</label>
                <InputSelect class="form-control" @bind-Value="_create.Severity">
                    @foreach (var status in Enum.GetValues<IncidentSeverity>())
                    {
                        <option value="@status">@status</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-2">
                <label>Location</label>
                <InputText class="form-control" @bind-Value="_create.Location" />
            </div>

            <button class="btn btn-primary" disabled="@_busy">Create</button>

            @if (!string.IsNullOrWhiteSpace(_error))
            {
                <div class="alert alert-danger mt-2">@_error</div>
            }
        </EditForm>
    </div>

    <div class="col-12 col-lg-7">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">All Incidents</h5>
            <button class="btn btn-outline-secondary" @onclick="Load" disabled="@_busy">Refresh</button>
        </div>

        @if (_loading)
        {
            <p class="mt-3">Loading...</p>
        }
        else if (_incidents.Count == 0)
        {
            <p class="mt-3">No incidents yet.</p>
        }
        else
        {
            <table class="table table-sm mt-3">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Severity</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in _incidents)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@i.Title</div>
                                <div class="text-muted" style="font-size: 0.85rem;">
                                    @i.Location
                                </div>
                            </td>
                            <td>@i.Severity</td>
                            <td>
                                <select class="form-select form-select-sm"
                                        value="@i.Status"
                                        @onchange="(e) => ChangeStatus(i.Id, e.Value?.ToString())">
                                    @foreach (var status in Enum.GetValues<IncidentStatus>())
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                            </td>
                            <td>@i.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => Delete(i.Id)"
                                        disabled="@_busy">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
